{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist",
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js"],
	"exclude": ["node_modules/**"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
